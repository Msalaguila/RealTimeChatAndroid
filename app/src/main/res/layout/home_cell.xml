<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImageFromHomeCell"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/user_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/dateTextViewHomeCell"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:text="Fecha Temporal"
        android:textSize="13sp"
        android:textAlignment="center"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="@id/profileImageFromHomeCell"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/nameTextViewHomeCell"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Nombre"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toTopOf="@id/profileImageFromHomeCell"
        app:layout_constraintStart_toEndOf="@id/profileImageFromHomeCell"
        app:layout_constraintEnd_toStartOf="@id/dateTextViewHomeCell"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/messageTextViewHomeCell"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Mensaje"
        android:textSize="14sp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/nameTextViewHomeCell"
        app:layout_constraintStart_toStartOf="@id/nameTextViewHomeCell"
        app:layout_constraintEnd_toEndOf="parent"
        />
    
    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/grayColor"
        app:layout_constraintStart_toStartOf="@id/profileImageFromHomeCell"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



</android.support.constraint.ConstraintLayout>